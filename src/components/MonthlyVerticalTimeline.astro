---
import { useEffect } from "astro/client";
import { getCollection } from "astro:content";
const years = await getCollection("years");
const nations = await getCollection("nations");
---

nations ({nations.length}): {nations.map(nation => <span>- {nation.data.name}</span>)}
years ({years.length}): {years.map(year => <span>{year.data.title}</span>)}

<div class="page" data-uia-timeline-skin="4" data-uia-timeline-adapter-skin-4="uia-card-skin-#1">
  <div class="uia-timeline">
    <div class="uia-timeline__container">
      <div class="uia-timeline__line"></div>

      {
          years.map((year, indexYear) => {
            <div class="uia-timeline__annual-sections">
              <span class="uia-timeline__year" aria-hidden="true">{year.data.title}</span>
              <div class="uia-timeline__groups">

                {
                  year.data.content?.map((item, indexItem) => {
                    <section class="uia-timeline__group" aria-labelledby={`timeline-demo-${indexYear+1}-heading-${indexItem+1}`}>
                      <div class="uia-timeline__point uia-card" data-uia-card-skin="1" data-uia-card-mod="1">
                        <div class="uia-card__container">
                          <div class="uia-card__intro">
                            <h3 id={`timeline-demo-${indexYear+1}-heading-${indexItem+1}`} class="ra-heading ha-screen-reader">{item[2]}</h3>
                            <span class="uia-card__time">
                                <time datetime="2008-02-02">
                                    <span class="uia-card__day">2</span>
                                    <span>{item[0]}<span class="ha-screen-reader"></span></span>
                                </time>
                            </span>
                          </div>
                          <div class="uia-card__body">
                            <div class="uia-card__description">
                              <p>{item[1]}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </section>
                  })
                }

              </div>
            </div>
          })
      }

