---
import type { CollectionEntry } from "astro:content";

type Props = {
  record: CollectionEntry<"records">;
};

const { record } = Astro.props;
---

<a
  class=`record-card`
  href={`/${record?.data?.master?.id}/records/${record?.id}`}
>
  <div>
    <img
      class="fade-in"
      loading="lazy"
      src={record?.data?.image.src}
      alt={record?.data?.image.alt}
    />
  </div>
  <h3>{record?.data?.name}</h3>
  <p>{new Date(record?.data?.publishDate).getFullYear()}</p>
</a>

<style>
  .record-card {
    display: flex;
    gap: 0.5rem;
    flex-direction: column;
    align-content: start;
    max-width: 300px;
  }
  div {
    aspect-ratio: 1;
    grid-area: img;
    background: var(--color-placeholder);
  }
  h3,
  p {
    margin: 0;
  }
  h3 {
    grid-area: title;
  }
  p {
    justify-self: end;
    grid-area: meta;
  }
</style>
