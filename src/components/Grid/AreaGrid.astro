---
import type { CollectionEntry } from "astro:content";
import AreaCard from "../cards/AreaCard.astro";

type Props = {
  areas: CollectionEntry<"areas">[];
};

const { nation, areas } = Astro.props;
---

<section>
  { areas.map(area => <AreaCard nation={nation} area={area} />) }
</section>

<style>
  section {
    display: flex;
    width: 100%;
    gap: 2rem;
    flex-direction: column;
  }
</style>
