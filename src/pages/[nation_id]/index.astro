---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import NationGrid from "../../components/NationGrid.astro";
import NationGridHeader from "../../components/NationGridHeader.astro";
import Preloader from "../../components/Preloader.astro";

const allNations = await getCollection("nations");
const nationsTotal = allNations.length;
const title = "Patriarchal Zen - All Nations";
---

<BaseLayout title={title}>
  <!--
    The <Preloader /> component is used to preload all images on the homepage using the images.loaded.js script.
    If you don’t want to use the preloader (e.g., for faster page load times or if you don’t require preloading images), you can safely remove the <Preloader /> component from this layout.
  -->
  <!--<Preloader />-->
  <NationGridHeader nationsTotal={nationsTotal} />
  <NationGrid nations={allNations} />
</BaseLayout>
<script src="../../scripts/index.js"></script>
